@using EntityLayer.Concrete
@model List<Heading>
@{
    ViewBag.Title = "MyHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "success";
    int i = 0;
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Başlık İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>

                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 30%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 8%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 30%">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            i++;
                            if (item.Category.CategoryName == "Eğitim")
                            {
                                color = "danger";
                            }
                            if (item.Category.CategoryName == "Tiyatro")
                            {
                                color = "dark";
                            }
                            if (item.Category.CategoryName == "Kitap")
                            {
                                color = "info";
                            }
                            if (item.Category.CategoryName == "Yazılım")
                            {
                                color = "light";
                            }
                            if (item.Category.CategoryName == "Spor")
                            {
                                color = "primary";
                            }
                            if (item.Category.CategoryName == "Film")
                            {
                                color = "secondary";
                            }
                            if (item.Category.CategoryName == "Bilim")
                            {
                                color = "success";
                            }
                            if (item.Category.CategoryName == "Seyahat")
                            {
                                color = "warning";
                            }
                            if (item.Category.CategoryName == "Sağlık")
                            {
                                color = "success";
                            }
                            <tr>
                                <td>
                                    @i
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @(((DateTime)item.HeadingDate).ToString("dd-MMM-yyyy"))
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img style="width:35px;" alt="." class="table-avatar" src="@item.Writer.WriterImage">
                                            @item.Writer.WriterName @item.Writer.WriterSurName
                                        </li>
                                    </ul>
                                </td>
                                <td class="project-state">
                                    <span class="badge badge-@color">@item.Category.CategoryName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="/AdminContent/ContentByHeading/@item.HeadingId">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/WriterPanel/EditHeading/@item.HeadingId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="/WriterPanel/DeleteHeading/@item.HeadingId">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
            </div>

            <!-- /.card-body -->
        </div>
        <!-- /.card -->
        <br />
        <a href="/WriterPanel/NewHeading" class="btn btn-info">Başlık Ekle</a>
    </section>
</body>
</html>